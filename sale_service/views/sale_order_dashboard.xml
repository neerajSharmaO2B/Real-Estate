<odoo>
    <!-- Graph View -->
    <record id="view_ss_sale_order_graph" model="ir.ui.view">
        <field name="name">ss.sale.order.graph</field>
        <field name="model">ss.sale.order</field>
        <field name="arch" type="xml">
            <graph string="Total Sales by Salesperson" type="bar">
                <field name="amount_total" type="measure"/>
                <field name="user_id" type="row"/>
            </graph>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_ss_sale_order_pivot" model="ir.ui.view">
        <field name="name">ss.sale.order.pivot</field>
        <field name="model">ss.sale.order</field>
        <field name="arch" type="xml">
            <pivot string="Sales Analysis">
                <field name="user_id" type="row"/>
                <field name="state" type="col"/>
                <field name="amount_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_ss_sale_order_dashboard" model="ir.actions.act_window">
        <field name="name">Sales Dashboard</field>
        <field name="res_model">ss.sale.order</field>
        <field name="view_mode">graph,pivot</field>
    </record>

    <!-- Dashboard Menu -->
    <menuitem id="menu_ss_dashboard" name="Dashboard" parent="menu_ss_root" action="action_ss_sale_order_dashboard"/>
</odoo>
