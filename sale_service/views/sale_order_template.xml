<odoo>
    <template id="report_sale_order">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Sale &amp; Service Order</h2>
                <p><strong>Customer:</strong> <span t-esc="o.partner_id.name"/></p>
                <p><strong>Salesperson:</strong> <span t-esc="o.user_id.name"/></p>
                <p><strong>Status:</strong> <span t-esc="o.state"/></p>

                <table class="table table-sm mt16">
                    <thead>
                        <tr>
                            <th>Product / Service</th>
                            <th class="text-end">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.order_line_ids" t-as="line">
                            <td><span t-esc="line.product_name"/></td>
                            <td class="text-end"><span t-esc="line.quantity"/></td>
                            <td class="text-end"><span t-esc="line.price_unit"/></td>
                            <td class="text-end"><span t-esc="line.subtotal"/></td>
                        </tr>
                    </tbody>
                </table>

                <h3 class="text-end mt16">
                    Total: <span t-esc="o.amount_total"/>
                </h3>
            </div>
        </t>
    </template>
</odoo>
