<odoo>
    <record id="ss_sale_order_user_rule" model="ir.rule">
        <field name="name">Sale Order: Own Records</field>
        <field name="model_id" ref="model_ss_sale_order"/>
        <field name="groups" eval="[(4, ref('group_ss_sale_user'))]"/>
        <field name="domain_force">[("user_id", "=", user.id)]</field>
    </record>

    <record id="ss_sale_order_manager_rule" model="ir.rule">
        <field name="name">Sale Order: All Records</field>
        <field name="model_id" ref="model_ss_sale_order"/>
        <field name="groups" eval="[(4, ref('group_ss_sale_manager'))]"/>
        <field name="domain_force">[(1, "=", 1)]</field>
    </record>
</odoo>