<odoo>
    <!-- List View -->
    <record id="estate_property_offer_list_view" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Estate Property Tag View">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </list>
        </field>
    </record>
    
    <!-- Form View -->
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer">
                <sheet>
                    <header>
                        <button 
                            name="action_accept"
                            type="object"
                            class="btn btn-success"
                            icon="fa-check"
                            string="accept"
                            modifiers="{'invisible': [('status','=','accept'),('status','=','refuse')]}"/>

                        <button name="action_refuse"
                            type="object"
                            class="btn btn-danger"
                            icon="fa-times"
                            string="refuse"
                            modifiers="{'invisible': [('status','=','accept'),('status','=','refuse')]}"/>
                    </header>   
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

       <record id="action_estate_property_offer_view" model="ir.actions.act_window">
        <field name="name">View Tag Properties</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>